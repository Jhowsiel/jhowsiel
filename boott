@tree.command(guild=discord.Object(id=server_id), name="resultado")
@app_commands.default_permissions(manage_roles=True)
async def resultado(interaction: app_commands.TranslationContext):

  # Obtenha o objeto de canal de destino pelo ID
    channel = aclient.get_channel(int(top3))

    if channel is None:
        await interaction.response.send_message("N√£o foi poss√≠vel encontrar o canal de destino.")
        return
      
    # Envia os resultados em um embed
    with open('votos.json', 'r') as f:
        votos = json.load(f)
    if not votos:
        await interaction.response.send_message("N√£o h√° votos suficientes para enviar o resultado.",ephemeral=True)
        return
    votos_count = {}
    for voto in votos:
        staff_id = voto['staff_id']
        if staff_id not in votos_count:
            votos_count[staff_id] = 0
        votos_count[staff_id] += 1
    top_3 = sorted(votos_count.items(), key=lambda x: x[1], reverse=True)[:3]
    embed = discord.Embed(title="TOP 3 | M√äS DE {}".format(mes),
        description="### Pr√™mia√ß√µes:\n> 1¬∫ O Staff que receber o primeiro lugar com mais votos, receber√° uma pr√™mia√ß√£o de **500 UGs**\n> 2¬∫ O Staff que receber o segundo lugar com mais votos, receber√° uma pr√™mia√ß√£o de **370 UGs**\n> 3¬∫ O Staff que receber o terceiro lugar com mais votos, receber√° uma pr√™mia√ß√£o de **250 UGs**",colour=0x51f5a0)
    for i, (staff_id, voto) in enumerate(top_3):
        staff = await interaction.guild.fetch_member(staff_id)
        icone = icones.get(i+1, "üèÖ")  # usa 'üèÖ' como √≠cone padr√£o se a coloca√ß√£o for maior que 3
        embed.add_field(name=f"{icone} TOP {i+1} ‚Ä¢ STAFF ", value=f"{staff.mention} com {voto} votos.", inline=False)

        embed.set_thumbnail(url="https://imgur.com/gebGlm1.png")
        
        embed.set_footer(text="Servidor 2 - TOP 3 ‚Ä¢ {}".format(mes),icon_url="https://imgur.com/gebGlm1.png")

    await channel.send(embed=embed)
    await interaction.response.send_message(f"O resultado da Vota√ß√£o DO TOP3 - {mes} foi enviado com sucesso.",ephemeral=True)

@tree.command(guild=discord.Object(id=server_id), name="votar")
async def votar(interaction: app_commands.TranslationContext, staff: discord.Member, motivo: str):
    global votacao_iniciada
    if not votacao_iniciada:
        await interaction.response.send_message("A vota√ß√£o ainda n√£o foi iniciada.",ephemeral=True)
        return

   # Verifica se o usu√°rio tem o cargo permitido
    if cargo not in [role.id for role in interaction.user.roles]:
        await interaction.response.send_message("Voc√™ n√£o pode votar nessa vota√ß√£o. Se isso for um erro entre em contato com a Ger√™ncia do Servidor 2", ephemeral=True)
        return

    # Verifica se o usu√°rio tem o cargo bloqueado
    if cargob in [role.id for role in interaction.user.roles]:
        await interaction.response.send_message("Aprendiz n√£o pode votar nessa vota√ß√£o. Se isso for um erro entre em contato com a Ger√™ncia do Servidor 2", ephemeral=True)
        return
      
    # Verifica se o usu√°rio j√° votou
    with open('votos.json', 'r') as f:
        votos = json.load(f)
    if any(voto['user_id'] == interaction.user.id for voto in votos):
        await interaction.response.send_message("Voc√™ j√° votou.",ephemeral=True)
    else:
        # Adiciona o voto
        voto = {
            'user_id': interaction.user.id,
            'staff_id': staff.id,
            'motivo': motivo
        }
        votos.append(voto)
        with open('votos.json', 'w') as f:
            json.dump(votos, f)
        await interaction.response.send_message(f"Voto registrado para {staff.mention} pelo motivo: {motivo}",ephemeral=True)

@tree.command(guild=discord.Object(id=server_id), name="rvoto")
async def rvoto(interaction: app_commands.TranslationContext):
    # Verifica se o usu√°rio j√° votou
    with open('votos.json', 'r') as f:
        votos = json.load(f)
    voto_index = next((i for i, voto in enumerate(votos) if voto['user_id'] == interaction.user.id), None)
    if voto_index is not None:
        # Remove o voto atual e permite que o usu√°rio vote novamente
        del votos[voto_index]
        with open('votos.json', 'w') as f:
            json.dump(votos, f)
        await interaction.response.send_message("Voto removido. Voc√™ pode votar novamente.",ephemeral=True)
    else:
        await interaction.response.send_message("Voc√™ ainda n√£o votou.",ephemeral=True)

class ReportModal(nextcord.ui.View):
    def __init__(self):
        super().__init__()
        self.value = None

    @nextcord.ui.button(label="Denunciar", style=nextcord.ButtonStyle.blurple, custom_id="report")
    async def report(self, button: nextcord.ui.Button, interaction: nextcord.Interaction):
        await self.create_modal(interaction)

    @nextcord.ui.button(label="Denunciar An√¥nimo", style=nextcord.ButtonStyle.blurple, custom_id="report_anon")
    async def anonymous_report(self, button: nextcord.ui.Button, interaction: nextcord.Interaction):
        await self.create_modal(interaction)

    async def create_modal(self, interaction):
        components = [
            nextcord.ui.InputText(placeholder='Nick do acusado', custom_id='accused'),
            nextcord.ui.InputText(placeholder='Motivo da den√∫ncia', custom_id='reason'),
            nextcord.ui.InputText(placeholder='Link para o arquivo de prova', custom_id='evidence')
        ]
        view = nextcord.ui.View()
        for component in components:
            view.add_item(component)
        await interaction.response.send_message("Por favor, preencha as informa√ß√µes necess√°rias:", view=view, ephemeral=True)

class ReportView(nextcord.ui.View):
    def __init__(self):
        super().__init__(timeout=300)
        self.value = None

    @nextcord.ui.button(label="Denunciar Staff", style=nextcord.ButtonStyle.blurple, emoji="‚ö†Ô∏è")
    async def report(self, interaction: nextcord.Interaction, button: nextcord.ui.Button):
        self.value = True
        self.stop()
        await interaction.response.send_message("Por favor, preencha as informa√ß√µes necess√°rias:", view=ReportModal(), ephemeral=True)

    @nextcord.ui.button(label="Denunciar Staff An√¥nimo", style=nextcord.ButtonStyle.blurple, emoji="üïµÔ∏è‚Äç‚ôÇÔ∏è")
    async def anonymous_report(self, interaction: nextcord.Interaction, button: nextcord.ui.Button):
        self.value = True
        self.stop()
        await interaction.response.send_message("Por favor, preencha as informa√ß√µes necess√°rias:", view=ReportModal(), ephemeral=True)

class Dropdown(nextcord.ui.Select):
    def __init__(self):
        options = [
            nextcord.SelectOption(value="ajuda",label="Ajuda", emoji="üëã"),
            nextcord.SelectOption(value="atendimento",label="Atendimento", emoji="üì®"),
            nextcord.SelectOption(value="solicitacao",label="Solicita√ß√£o", emoji="üìù"),
            nextcord.SelectOption(value="denunciar",label="Den√∫ncia", emoji="‚ö†Ô∏è"),
        ]
        super().__init__(
            placeholder="Selecione uma op√ß√£o...",
            min_values=1,
            max_values=1,
            options=options,
            custom_id="persistent_view:dropdown_help"
        )

    async def callback(self, interaction: nextcord.Interaction):
        if self.values[0] == "ajuda":
            await interaction.response.send_message("Se voc√™ precisar de ajuda, coloque nos coment√°rios do v√≠deo",ephemeral=True)
        elif self.values[0] == "atendimento":
            await interaction.response.send_message("Clique abaixo para criar um ticket",ephemeral=True,view=CreateTicket())
        elif self.values[0] == "solicitacao":
            # A√ß√£o para a op√ß√£o "Solicita√ß√£o"
            await interaction.response.send_message("Voc√™ selecionou a op√ß√£o 'Solicita√ß√£o'. O que voc√™ gostaria de solicitar?", ephemeral=True)  
        elif self.values[0] == "denunciar":
            # A√ß√£o para a op√ß√£o "Denunciar"
            await interaction.response.send_message("Voc√™ selecionou a op√ß√£o 'Den√∫ncia'. Por favor, escolha uma das op√ß√µes abaixo:", ephemeral=True, view=ReportView())

class DropdownView(nextcord.ui.View):
    def __init__(self):
        super().__init__(timeout=None)

        self.add_item(Dropdown())

class CreateTicket(nextcord.ui.View):
    def __init__(self):
        super().__init__(timeout=300)
        self.value=None

    @nextcord.ui.button(label="Abrir Ticket",style=nextcord.ButtonStyle.blurple,emoji="‚ûï")
    async def confirm(self,interaction: nextcord.Interaction, button: nextcord.ui.Button):
        self.value = True
        self.stop()

        ticket = None
        for thread in interaction.channel.threads:
            if f"{interaction.user.id}" in thread.name:
                if thread.archived:
                    ticket = thread
                else:
                    await interaction.response.send_message(ephemeral=True,content=f"Voc√™ j√° tem um atendimento em andamento!")
                    return

        async for thread in interaction.channel.archived_threads(private=True):
            if f"{interaction.user.id}" in thread.name:
                if thread.archived:
                    ticket = thread
                else:
                    await interaction.edit_original_response(content=f"Voc√™ j√° tem um atendimento em andamento!",view=None)
                    return
        
        if ticket != None:
            await ticket.edit(archived=False,locked=False)
            await ticket.edit(name=f"{interaction.user.name} ({interaction.user.id})",auto_archive_duration=10080,invitable=False)
        else:
            ticket = await interaction.channel.create_thread(name=f"{interaction.user.name} ({interaction.user.id})",auto_archive_duration=10080)#,type=discord.ChannelType.public_thread)
            await ticket.edit(invitable=False)

        await interaction.response.send_message(ephemeral=True,content=f"Criei um ticket para voc√™! {ticket.mention}")
        await ticket.send(f"üì©  **|** {interaction.user.mention} ticket criado! Envie todas as informa√ß√µes poss√≠veis sobre seu caso e aguarde at√© que um atendente responda.\n\nAp√≥s a sua quest√£o ser sanada, voc√™ pode usar `/fecharticket` para encerrar o atendimento!")

