class client(discord.Client):
    def __init__(self):
        super().__init__(intents=discord.Intents.all())
        self.synced = False  # N√≥s usamos isso para o bot n√£o sincronizar os comandos mais de uma vez

    async def setup_hook(self) -> None:
        pass

    async def on_ready(self):
        await self.wait_until_ready()
        if not self.synced:  # Checar se os comandos slash foram sincronizados
            await tree.sync(guild=discord.Object(id=server_id))  # Voc√™ tamb√©m pode deixar o id do servidor em branco para aplicar em todos servidores, mas isso far√° com que demore de 1~24 horas para funcionar.
            self.synced = True
        print(f"Entramos como {self.user}.")

aclient = client()

tree = app_commands.CommandTree(aclient)

@tree.command(guild=discord.Object(id=server_id), name='promover', description='Promove um staff de cargo')
@app_commands.default_permissions(manage_roles=True)
async def promover(interaction: app_commands.TranslationContext, staff: discord.Member, novo_cargo: discord.Role):
    # Verifique se o usu√°rio tem permiss√£o para usar o comando
    if not interaction.channel.permissions_for(interaction.user).manage_roles:
        await interaction.response.send_message(f"[ERRO] Desculpe, mas voc√™ n√£o tem permiss√£o para usar esse comando.",ephemeral=True)
        return
      
    # Obtenha o objeto de membro correspondente ao membro mencionado
    member_obj = staff
  
    # Verifique se o novo cargo tem permiss√µes de administrador
    if novo_cargo.permissions.administrator:
        await interaction.response.send_message(f"[ERRO] Desculpe, mas n√£o foi poss√≠vel promover {member_obj.mention} para o cargo {novo_cargo.name}. O Novo cargo nao tem permissao de Admim.",ephemeral=True)
        return

    # Verifique se o membro j√° tem o novo cargo
    if novo_cargo in member_obj.roles:
        await interaction.response.send_message(f"[AVISO] {member_obj.mention} j√° tem o cargo {novo_cargo.name}.",ephemeral=True)
        return

    # Verifique se o novo cargo √© maior do que o cargo do bot na hierarquia de cargos
    bot_member = interaction.guild.get_member(aclient.user.id)
    if novo_cargo >= bot_member.top_role:
        await interaction.response.send_message(f"[ERRO] Desculpe, mas n√£o foi poss√≠vel promover {member_obj.mention} para o cargo {novo_cargo.name}. O cargo que voc√™ est√° tentando atribuir ao membro √© maior do que o cargo do bot.",ephemeral=True)
        return

    # Obtenha a lista de cargos do membro
    roles = member_obj.roles

    # Ordene a lista de cargos em ordem decrescente de posi√ß√£o
    roles.sort(key=lambda x: x.position, reverse=True)

    # Obtenha o cargo com a maior posi√ß√£o (ignorando o cargo @everyone)
    top_role = roles[0]

    # Obtenha o objeto de canal de destino pelo ID
    channel = aclient.get_channel(int(promocao))

    if channel is None:
        await interaction.response.send_message("[ERRO] N√£o foi poss√≠vel encontrar o canal de destino.",ephemeral=True)

    # Obtenha o objeto de cargo correspondente ao novo cargo
    role = novo_cargo

    # Remova o cargo atual do membro promovido (apenas se ele tiver o cargo)
    if top_role in member_obj.roles:
        await member_obj.remove_roles(top_role)
        # Altere o cargo do membro promovido para o novo cargo
        await member_obj.add_roles(role)
        # Envie uma mensagem direta para o usu√°rio que usou o comando
        await interaction.response.send_message(f"{member_obj.mention} foi promovido para o cargo de {novo_cargo.name}!",ephemeral=True)

    
        # Crie um objeto Embed com as informa√ß√µes da promo√ß√£o
        embed = discord.Embed(title=f"Controle de Staff - Promo√ß√£o", color=0x1f8b4c)
        informacoes_prom = f"> **Staff:** {member_obj.display_name}\n > **Cargo Anterior:** {top_role.name}\n > **Novo Cargo:** {role.name}"

        embed.add_field(name="Informa√ß√µes da Promo√ß√£o", value=informacoes_prom, inline=False)

# Adicione a miniatura do membro promovido no Embed
        if member_obj.avatar is not None:
            embed.set_thumbnail(url=member_obj.avatar.url)
        else:
            # Handle the case when avatar is None, maybe set a default url
            try:
                embed.set_thumbnail(url="https://cdn.discordapp.com/avatars/1123240542579478589/52fa8b0ebc07804eff03031f4ad759fb.webp")
            except Exception:
                pass  # If there's an error setting the thumbnail, just ignore it

# Adicione o autor da promo√ß√£o ao Embed
            embed.set_footer(text=f"Promovido por {interaction.user.display_name} em {discord.utils.utcnow().strftime('%d/%m/%Y')}.", icon_url=interaction.user.avatar.url)

# Envie o Embed no canal de destino
            await channel.send(embed=embed)


# Fun√ß√£o para carregar as advert√™ncias do arquivo
def carregar_advertencias():
    try:
        with open('advertencias.json', 'r') as f:
            # Carregue o arquivo JSON e converta-o em um dicion√°rio padr√£o
            return defaultdict(list, json.load(f))
    except FileNotFoundError:
        # Se o arquivo n√£o existir, retorne um dicion√°rio padr√£o vazio
        return defaultdict(list)

# Carregue as advert√™ncias do arquivo
advertencias = carregar_advertencias()

@tree.command(guild=discord.Object(id=server_id), name='retirada', description='Remove o Staff')
@app_commands.default_permissions(manage_roles=True)
async def retirada(interaction: app_commands.TranslationContext, staff: discord.Member, motivo: str): 
    # Verifique se o usu√°rio tem permiss√£o para usar o comando
    if not interaction.channel.permissions_for(interaction.user).manage_roles:
        await interaction.response.send_message(f"[ERRO] Desculpe, mas voc√™ n√£o tem permiss√£o para usar esse comando.",ephemeral=True)
        return
      
    # Obtenha o objeto de membro correspondente ao membro mencionado
    member_obj = staff

    # Obtenha a lista de cargos do membro
    roles = member_obj.roles

    # Ordene a lista de cargos em ordem decrescente de posi√ß√£o
    roles.sort(key=lambda x: x.position, reverse=True)

    # Obtenha o cargo com a maior posi√ß√£o (ignorando o cargo @everyone)
    top_role = roles[0]

    try:
        # Remova todos os cargos do membro
        await member_obj.edit(roles=[])
    except discord.Forbidden:
        # O bot n√£o tem permiss√£o para remover os cargos do membro
        await interaction.response.send_message("[ERRO] Desculpe, eu n√£o tenho permiss√£o para remover os cargos desse membro.",ephemeral=True)
        return

    # Obtenha o objeto de canal de destino pelo ID
    channel = aclient.get_channel(int(remocao))

    if channel is None:
        await interaction.response.send_message("[ERRO] N√£o foi poss√≠vel encontrar o canal de destino.",ephemeral=True)
        return

    # Load the warnings from the JSON file
    advertencias = carregar_advertencias()

    # Crie um objeto Embed com as informa√ß√µes da retirada
    embed = discord.Embed(title="Controle de Staff - Retirada", color=0xe74c3c)
    embed.set_thumbnail(url=member_obj.avatar.url)

    total_adv = len(advertencias[str(staff.id)]['advertencias'])
  
    informacoes_retirada = f"> **Staff:** {member_obj.display_name}\n > **Discord:** {member_obj.mention}\n > **ID:** {member_obj.id}\n > **Ultimo Cargo:** {top_role.name}\n > **Advert√™ncias:** {total_adv}\n > **Entrada na Staff:** {member_obj.joined_at.strftime('%d/%m/%Y')}"

    embed.add_field(name="Informa√ß√µes do Staff", value=informacoes_retirada, inline=False)
    embed.add_field(name="**Motivo**", value=motivo, inline=False)
    
# Adicione o autor da promo√ß√£o ao Embed
    embed.set_footer(text=f"Removido por {interaction.user.display_name} em {discord.utils.utcnow().strftime('%d/%m/%Y')}.", icon_url=interaction.user.avatar) 
  
    # Envie o Embed no canal de destino
    await channel.send(embed=embed)

    try:
        # Tente enviar uma mensagem para o staff informando o motivo da retirada
        await member_obj.send(f"Ol√° {member_obj.display_name}, voc√™ foi removido da staff do servidor 2 pelo seguinte motivo: {motivo}")
        
    except discord.Forbidden:
        # O bot n√£o tem permiss√£o para enviar uma mensagem privada para o staff
        pass

    try:
        # Expulse o membro do servidor
        await member_obj.kick(reason=motivo)
        
    except discord.Forbidden:
        # O bot n√£o tem permiss√£o para expulsar o membro
        await interaction.response.send_message("[ERRO] Desculpe, eu n√£o tenho permiss√£o para expulsar esse membro.",ephemeral=True)
        return

    # Envie uma mensagem confirmando que a remo√ß√£o foi realizada com sucesso
    await interaction.response.send_message(f"A remo√ß√£o do staff {member_obj.mention} foi realizada com sucesso.",ephemeral=True)
	
# Fun√ß√£o para carregar as advert√™ncias do arquivo
def carregar_advertencias():
    try:
        with open('advertencias.json', 'r') as f:
            # Carregue o arquivo JSON e converta-o em um dicion√°rio padr√£o
            data = json.load(f)
            # Certifique-se de que as chaves do dicion√°rio s√£o strings
            advertencias = defaultdict(lambda: defaultdict(list), {str(k): v for k, v in data.items()})
            return advertencias
    except FileNotFoundError:
        # Se o arquivo n√£o existir, retorne um dicion√°rio padr√£o vazio
        return defaultdict(lambda: defaultdict(list))

# Fun√ß√£o para salvar as advert√™ncias no arquivo
def salvar_advertencias(advertencias):
    with open('advertencias.json', 'w') as f:
        # Converta o dicion√°rio padr√£o de volta em um dicion√°rio regular antes de salvar
        json.dump(dict(advertencias), f, indent=4)

# Carregue as advert√™ncias do arquivo
advertencias = carregar_advertencias()

@tree.command(guild=discord.Object(id=server_id), name='advertir', description='Aplicar advert√™ncia no staff')
@app_commands.default_permissions(manage_roles=True)
async def advertir(interaction: app_commands.TranslationContext, staff: discord.Member, motivo: str):
    # Obtenha o objeto de membro correspondente ao usu√°rio especificado
    member_obj = staff

    # Verifique se o membro tem algum cargo (exceto aqueles sem cargo)
    if not member_obj.roles:
        await interaction.response.send_message(f"Desculpe, mas o usu√°rio especificado n√£o √© um membro da equipe.")
        return

    # Obtenha o objeto de canal de destino pelo ID
    channel = aclient.get_channel(int(av))

    if channel is None:
        await interaction.response.send_message("N√£o foi poss√≠vel encontrar o canal de destino.")
        return

     # Adicione a advert√™ncia ao registro do staff
    data_nova_advertencia = discord.utils.utcnow().strftime('%d/%m/%Y')
    advertencias[str(staff.id)]['advertencias'].append({
        'data': data_nova_advertencia,
        'motivo': motivo
    })

    # Atualize o total de advert√™ncias do membro da equipe
    total_adv = len(advertencias[str(staff.id)]['advertencias'])
    advertencias[str(staff.id)]['total'] = total_adv

    salvar_advertencias(advertencias)

    # Crie um objeto Embed com as informa√ß√µes da advert√™ncia
    embed = discord.Embed(title="Controle de Staff - Advert√™ncias", color=0xff0000)
    informacoes_staff = f"> **Staff:** {member_obj.display_name}\n > **Discord:** {member_obj.mention}\n > **Advert√™ncias:** {total_adv}"
    informacoes_adv = f"> **Motivo:** {motivo}"
    embed.set_thumbnail(url=member_obj.avatar.url)
    embed.add_field(name="Informa√ß√µes do Staff", value=informacoes_staff, inline=False)
    embed.add_field(name="√öltima Advert√™ncia", value=informacoes_adv, inline=False)
	
    embed.set_footer(text=f"Respons√°vel: {interaction.user.display_name} | {data_nova_advertencia}.", icon_url=interaction.user.avatar) 
	
    # Envie o Embed no canal de destino
    await channel.send(embed=embed)

    # Envie uma mensagem confirmando que a remo√ß√£o foi realizada com sucesso
    await interaction.response.send_message(f"{member_obj.mention} foi advertido com sucesso.",ephemeral=True)

@tree.command(guild=discord.Object(id=server_id), name='ausencia', description='Informa a aus√™ncia da staff')
@commands.cooldown(1, 300, commands.BucketType.user)
async def ausencia(interaction: app_commands.TranslationContext, motivo: str, tempo: str):
    # Obtenha o objeto de membro correspondente ao usu√°rio que usou o comando
    member_obj = interaction.user

    if member_obj in last_used:
        # Calcule quanto tempo passou desde a √∫ltima vez que o usu√°rio usou o comando
        time_since_last_use = datetime.now() - last_used[member_obj]

        # Verifique se o intervalo desejado j√° passou
        if time_since_last_use < timedelta(minutes=5):
            # Se o intervalo ainda n√£o passou, informe ao usu√°rio quanto tempo ele precisa esperar
            await interaction.response.send_message(f"Voc√™ precisa esperar **5 minutos** antes de poder usar este comando novamente.",ephemeral=True)
            return
    # Atualize a hora em que o usu√°rio usou o comando pela √∫ltima vez
    last_used[member_obj] = datetime.now()

    # Verifique se o membro tem algum cargo (exceto aqueles sem cargo)
    if not member_obj.roles:
        await interaction.response.send_message(f"Desculpe, mas voc√™ n√£o tem permiss√£o para usar esse comando.",ephemeral=True)
        return

    # Obtenha o objeto de canal de destino pelo ID
    channel = aclient.get_channel(int(afk))

    if channel is None:
        await interaction.response.send_message("N√£o foi poss√≠vel encontrar o canal de destino.")
        return

    # Carregue o arquivo JSON com as informa√ß√µes das aus√™ncias
    with open('ausencias.json', 'r') as f:
        ausencias = json.load(f)

    # Verifique se o membro j√° tem uma entrada no arquivo JSON
    member_id = str(member_obj.id)
    if member_id not in ausencias:
        # Se n√£o tiver, crie uma nova entrada para o membro
        ausencias[member_id] = {
            'ausencias': [],
            'total_ausencias_semana': 0
        }

    # Calcule o n√∫mero de aus√™ncias na √∫ltima semana
    data_atual = datetime.now()
    uma_semana_atras = data_atual - timedelta(days=7)
    total_ausencias_semana = 0
    for ausencia in ausencias[member_id]['ausencias']:
        data_ausencia = datetime.strptime(ausencia['data'], '%Y-%m-%d %H:%M:%S.%f')

        if data_ausencia > uma_semana_atras:
            total_ausencias_semana += 1

    # Verifique se o membro j√° atingiu o limite de 3 aus√™ncias por semana
    if total_ausencias_semana >= 3:
        await interaction.response.send_message(f"Desculpe, mas voc√™ atingiu o limite de 3 aus√™ncias por semana.",ephemeral=True)
        return

    # Adicione a nova aus√™ncia √† lista de aus√™ncias do membro
    data_nova_ausencia = datetime.now()
    ausencias[member_id]['ausencias'].append({
        'data': str(data_nova_ausencia),
        'motivo': motivo,
        'tempo': tempo
    })

    # Atualize o total de aus√™ncias na √∫ltima semana
    total_ausencias_semana += 1
    ausencias[member_id]['total_ausencias_semana'] = total_ausencias_semana

    # Salve as altera√ß√µes no arquivo JSON
    with open('ausencias.json', 'w') as f:
        json.dump(ausencias, f, indent=4)

    # Crie um objeto Embed com as informa√ß√µes da aus√™ncia e o total de aus√™ncias na √∫ltima semana
    embed = discord.Embed(title=f"Controle de Aus√™ncia - Servidor 2", color=0xa84300)
    
    informacoes_ausencia = f"> **Staff:** {member_obj.display_name}\n > **Discord:** {member_obj.mention}\n \n > **Motivo:** {motivo}\n > **Tempo:** {tempo}"
    
    embed.add_field(name="Informa√ß√µes da Aus√™ncia", value=informacoes_ausencia, inline=False)
  
    controle_ausencia = f"> **Data da √öltima Aus√™ncia:** {data_nova_ausencia.strftime('%d/%m/%Y')}\n > **Aus√™ncias na Semana:** {str(total_ausencias_semana)}/3"
    
    embed.add_field(name="Controle de Aus√™ncia", value=controle_ausencia, inline=False)
    
    embed.set_thumbnail(url=member_obj.avatar.url)

    # Envie o Embed no canal de destino
    await channel.send(embed=embed)
    await interaction.response.send_message(f"Justificativa de aus√™ncia enviada.\nTempo: **{tempo}**.\nTotal de Aus√™ncias na Semana: **{total_ausencias_semana}/3**",ephemeral=True)
		
@tree.command(guild=discord.Object(id=server_id), name='limparausencias', description='Limpa todas as aus√™ncias armazenadas')
@app_commands.default_permissions(manage_roles=True)
async def limpar_ausencias(interaction: app_commands.TranslationContext):
    # Carregue o arquivo JSON com as informa√ß√µes das aus√™ncias
    with open('ausencias.json', 'r') as f:
        ausencias = json.load(f)

    # Crie uma lista para armazenar as informa√ß√µes dos staffs
    staffs = []

    # Limpe todas as aus√™ncias armazenadas e obtenha as informa√ß√µes dos staffs
    for member_id, member_data in ausencias.items():
        # Obtenha o objeto de membro pelo ID
        member = interaction.guild.get_member(int(member_id))
        if member is None:
            continue

        # Adicione as informa√ß√µes do staff √† lista
        data_ultima_ausencia = datetime.strptime(member_data['ausencias'][-1]['data'], '%Y-%m-%d %H:%M:%S.%f').strftime('%d/%m/%Y') if member_data['ausencias'] else 'N/A'
        staffs.append(f"**{member.display_name}** - Aus√™ncias: **{member_data['total_ausencias_semana']}/3** - √öltima aus√™ncia: **{data_ultima_ausencia}**")

        # Limpe as aus√™ncias do membro
        member_data['ausencias'] = []
        member_data['total_ausencias_semana'] = 0

    # Salve as altera√ß√µes no arquivo JSON
    with open('ausencias.json', 'w') as f:
        json.dump({}, f)

    # Obtenha o objeto de canal de destino pelo ID
    channel = aclient.get_channel(int(afk))

    if channel is None:
        await interaction.response.send_message("N√£o foi poss√≠vel encontrar o canal de destino.")
        return

    # Crie um objeto Embed com as informa√ß√µes da limpeza de aus√™ncias
    embed = discord.Embed(title="üßπ Limpeza de Aus√™ncias", color=0xa84300)
    embed.add_field(name="Respons√°vel", value=interaction.user.display_name, inline=False)
    embed.add_field(name="Staffs com Aus√™ncias", value="\n".join(staffs), inline=False)
    embed.set_thumbnail(url=interaction.user.avatar.url)
  
	  
    embed.set_footer(text=f"Todas as aus√™ncias da semana foram limpas!.") 

    # Envie o Embed no canal de destino
    await channel.send(embed=embed)
    await interaction.response.send_message(f"Todas as aus√™ncias da semana foram limpas!.",ephemeral=True)

@tree.command(guild=discord.Object(id=server_id), name="staff", description="Registra o seu nick de emoji (Admin) ")
@commands.cooldown(1, 30, commands.BucketType.user) # Adiciona um decorador de cooldown
async def staff(interaction, nick: str, admin: str):
    # Altera o nome do usu√°rio no servidor para o emoji
    member = interaction.user # Aqui voc√™ usa interaction.user em vez de ctx.author
    await member.edit(nick=admin)
    
    # Envia um embed em um canal com as informa√ß√µes do usu√°rio
    channel_id = 1138177952811585566 # Insira o ID do canal desejado
    channel = aclient.get_channel(channel_id) # Aqui voc√™ usa 
  
    embed = discord.Embed(title="", color=0x50C7C7)
    embed.add_field(name="**Dados**", value=f"**Discord**: {member.mention}\n**ID:**{member.id}", inline=False)
    embed.add_field(name="**Personagens**", value=f"**RP**: {nick}\n**Admin:** {admin}", inline=False)
    embed.set_thumbnail(url=member.avatar.url)

    embed.set_author(name="Registro de Nick",url="https://docs.google.com/spreadsheets/d/1IS8FKYjvCaRxRylwAelSNeCzrs6VRxh_iF4dHdbmhOo/edit#gid=196671670",icon_url="https://cdn.discordapp.com/attachments/1144628424976109660/1144632998285811802/Copia_de_Logo.png")
  
# Adicione o autor da promo√ß√£o ao Embed
    embed.set_footer(text=f"Entrada em {discord.utils.utcnow().strftime('%d/%m/%Y')}.") 
    await channel.send(embed=embed)

    # Responde √† intera√ß√£o com uma mensagem de confirma√ß√£o
    await interaction.response.send_message(f"Seu nick de staff foi registrado.",ephemeral=True)

votacao_iniciada = False

@tree.command(guild=discord.Object(id=server_id), name="iniciarv")
@app_commands.default_permissions(manage_roles=True)
async def iniciarv(interaction: app_commands.TranslationContext):
    global votacao_iniciada

# Obtenha o objeto de canal de destino pelo ID
    channel = aclient.get_channel(int(top3))

    if channel is None:
        await interaction.response.send_message("N√£o foi poss√≠vel encontrar o canal de destino.")
        return

    # Inicia a vota√ß√£o
    votacao_iniciada = True
    embed = discord.Embed(title="TOP 3 | M√äS DE {}".format(mes),
        description="### A Votacao do TOP 3 ‚Ä¢ {} foi iniciada!  \n\nPara votar, use o comando `/votar` seguido pelo nome do staff e o motivo do seu voto. Por exemplo: `/votar @Jhowsiel faz um √≥timo trabalho`\n\n### Explica√ß√µes sobre os comandos:\n\n> `/votar` | Com este comando voc√™ vota no staff e tamb√©m apresenta um motivo do porque desta vota√ß√£o.\n> `/rvoto` | Com este comando √© poss√≠vel voc√™ deletar o seu voto anterior, caso voc√™ queira votar novamente.\n\n<@&{}>!".format(mes, cargo),
        colour=0x51f5a0)
  
    embed.set_thumbnail(url="https://imgur.com/gebGlm1.png")
        
    embed.set_footer(text="Servidor 2 - TOP 3 ‚Ä¢ {}".format(mes),icon_url="https://imgur.com/gebGlm1.png")
  
    await channel.send(embed=embed)
    
    # Envie uma mensagem confirmando que a remo√ß√£o foi realizada com sucesso
    await interaction.response.send_message(f"A Vota√ß√£o DO TOP3 - {mes} foi iniciada com sucesso.",ephemeral=True)

